{
  "name": "Zuck Off! Musk - Block Musk & Zuckerberg",
  "version": "1.1",
  "description": "Block traffic to Elon Musk’s X (Twitter) and Mark Zuckerberg’s Meta platforms.",
  "manifest_version": 3,
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-on.png",
      "32": "icons/icon-on.png",
      "48": "icons/icon-on.png",
      "128": "icons/icon-on.png"
    }
  },
  "icons": {
    "16": "icons/icon-on.png",
    "32": "icons/icon-on.png",
    "48": "icons/icon-on.png",
    "128": "icons/icon-on.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
